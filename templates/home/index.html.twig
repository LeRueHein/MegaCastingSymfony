{% extends 'base.html.twig' %}


{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <table class="table-bordered"><br>
                <h1 class="logo-1 my-5"> OFFRE DE CASTING</h1><br>


                {{ include('home/filtre.html.twig') }}


                {% for offer in offers %}


                    <div class="backgroundcarte ms-4 mb-4" style="width: 18rem;">


                        <div class="card-body me-1">
                            <h1 class="col-sm textcard mt-3 text-truncate" href="{{ path('app_offer', {'id': offer.id}) }}" class="libel">{{ offer.libel }}</h1><br>
                            <h5 href="{{ path('app_offer', {'id': offer.id}) }}"><i class="bi-geo-alt"></i> : {{ offer.localisation }}</h5><br>
                            <h6 href="{{ path('app_offer', {'id': offer.id}) }}"><i class="bi-calendar"></i> : {{ offer.parutionDateTime | date('d / m / y') }}</h6>
                            <br>
                            <p class="card-title "></p>
                            <a href="{{ path('app_offer', {'id': offer.id}) }}" class="btn btn-primary fw-bold mb-4 mt-3">OFFRES</a>
                        </div>
                    </div>


                {% endfor %}

                {{ knp_pagination_render(offers) }}

            </table>
        </div>

    </div>
{% endblock %}

