            <td> {{ offers.reference }}</td>
            <br>
            <th scope="col">Localisation :</th>
            <td> {{ offers.localisation }}</td>
            <br>
            <th scope="col">Date de parution :</th>
            <td> {{ offers.parutionDateTime | date('d / m / y') }}</td>
            <br>
            <th scope="col">Date de d√©but :</th>
            <td> {{ offers.OffreDateStart | date('d / m / y') }}</td>
            <br>
