{% extends 'base.html.twig' %}

{% block title %}Hello OfferController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: red; padding: 2px 6px; }

</style>
    <h1>Données</h1>


<div>



    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Label</th>
            <th scope="col">Description</th>
            <th scope="col">Localisation</th>
            <th scope="col">Date de parution</th>
            <th scope="col">Date de début</th>
            <th scope="col">Date de fin</th>

        </tr>
        </thead>
        <tbody>
    {% for offer in offers %}
        <tr>
            <th scope="row">1</th>
            <td>{{ offer.libel }}</td>
            <td>{{ offer.reference }}</td>
            <td>{{ offer.localisation }}</td>
            <td>{{ offer.parutionDateTime | date('d / m / y')}}</td>
            <td>{{ offer.OffreDateStart | date('d / m / y')}}</td>
            <td>{{ offer.OffreDateEnd | date('d / m / y')}}</td>
        </tr>
    {%  endfor  %}

        </tbody>
    </table>





</table>
</div>

{% endblock %}

